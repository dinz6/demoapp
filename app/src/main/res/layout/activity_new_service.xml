<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            tools:context=".servicemanage.view.NewService">

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:background="#5CACEE">
            <LinearLayout

                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                <ImageView
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:id="@+id/newService_back"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_back"
                        android:padding="10dp"
                        android:contentDescription="@string/back"/>

                <TextView
                        android:id="@+id/newService_title"
                        android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent"

                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textColor="#ffffff"
                        android:layout_marginRight="50dp"
                />


            </LinearLayout>


        </LinearLayout>
        <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal" android:paddingLeft="10dp" android:paddingRight="10dp">
            <com.beardedhen.androidbootstrap.BootstrapWell
                    android:id="@+id/newService_type"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    app:bootstrapSize="sm">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="点击选择服务类别"
                        android:id="@+id/newService_typeText"
                />
            </com.beardedhen.androidbootstrap.BootstrapWell>


        </LinearLayout>

        <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_gravity="center"
                android:orientation="horizontal" android:paddingLeft="10dp" android:paddingRight="10dp">
            <com.beardedhen.androidbootstrap.BootstrapWell
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_gravity="start"

                    app:bootstrapSize="sm">

                <TextView
                        android:id="@+id/newService_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="服务名称"
                />

            </com.beardedhen.androidbootstrap.BootstrapWell>

            <com.beardedhen.androidbootstrap.BootstrapEditText android:layout_marginLeft="10dp"
                                                               android:layout_width="match_parent"
                                                               app:roundedCorners="true"
                                                               android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:gravity="center_vertical"

                android:orientation="horizontal" android:paddingLeft="10dp" android:paddingRight="10dp">
            <com.beardedhen.androidbootstrap.BootstrapWell
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_gravity="start"

                    app:bootstrapSize="sm">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="详细内容"
                />

            </com.beardedhen.androidbootstrap.BootstrapWell>

            <com.beardedhen.androidbootstrap.BootstrapEditText
                    android:id="@+id/newService_content"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    app:roundedCorners="true"
                    android:layout_height="match_parent"
                    android:maxLength="100"


                    android:hint="100字以内描述"

            />

        </LinearLayout>
        <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_gravity="center"
                android:orientation="horizontal" android:paddingLeft="10dp" android:paddingRight="10dp">
            <com.beardedhen.androidbootstrap.BootstrapWell
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_gravity="start"

                    app:bootstrapSize="sm">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="收费规则"
                />

            </com.beardedhen.androidbootstrap.BootstrapWell>

            <com.beardedhen.androidbootstrap.BootstrapEditText
                    android:id="@+id/newService_fee"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    app:roundedCorners="true"
                    android:layout_height="match_parent"
                    android:maxLength="100"


                    android:hint="100字以内描述"

            />
        </LinearLayout>

        <com.beardedhen.androidbootstrap.BootstrapButton
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="保存"
                android:id="@+id/newService_save"
                app:bootstrapBrand="info"
                app:bootstrapSize="lg"
                app:buttonMode="regular"
                app:showOutline="false"
                app:roundedCorners="true"
        />
    </LinearLayout>
</ScrollView>